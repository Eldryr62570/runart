{% extends 'base.html.twig' %}

{% block title %}Runart - Se connecter{% endblock %}

{% block body %}
    <div class="bg-orange-100 flex flex-col justify-center items-center space-y-5">
        <h3 class="text-3xl mt-10">Connexion</h3>

        <form action="{{ path('app_login') }}" method="post" class="login_form flex flex-col justify-center items-start w-1/3 text-xl bg-stone-700 p-4 rounded text-white">
            <div class="mb-2 w-full">
                <label for="username">Email:</label>
                <input type="text" id="username" name="_username" class="w-full"/>
            </div>

            <div class="mb-2 w-full">
                <label for="password">Password:</label>
                <input type="password" id="password" name="_password" class="w-full"/>
            </div>

            {# If you want to control the URL the user is redirected to on success
            <input type="hidden" name="_target_path" value="/account"/> #}

            <button type="submit" class="bg-orange-100 text-black rounded px-2 mt-3">Se connecter</button>
        </form>
    </div>
    
{% endblock %}
