{% extends 'base.html.twig' %}

{% block title %}Runart - S'inscrire{% endblock %}

{% block body %}
    <div class="bg-orange-100 flex flex-col justify-center items-center space-y-5" id="inscrire">
        <h3 class="text-3xl mt-10">Inscription</h3>

        {{ form_start(registrationForm, {
            'attr': {
                'class': 'bg-stone-700 text-white w-1/2 flex flex-col justify-center items-start mb-20 p-4 rounded space-y-2 text-xl'
            }
        }) }}
            {{ form_row(registrationForm.name) }}
            {{ form_row(registrationForm.firstname) }}
            {{ form_row(registrationForm.email) }}
            {{ form_row(registrationForm.plainPassword) }}
            {{ form_row(registrationForm.biographie) }}
            <button type="submit" class="bg-orange-100 text-black rounded px-2 py-1 mt-3 sub">S'inscrire</button>
        {{ form_end(registrationForm) }}
    </div>
    
{% endblock %}
